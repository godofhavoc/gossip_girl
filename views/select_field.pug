extends layout

block content
    h1 Select Collection
    form(action='/', method='post')
      .col-md-4.col-md-offset-4
          .form-group
              select(name='test').form-control
                option(disabled selected value) Select
                for item in collections
                  option() #{item}
          .form-group
              button(
                type='submit'
                value='submit'
              ).form-control.btn.btn-info Subscribe
